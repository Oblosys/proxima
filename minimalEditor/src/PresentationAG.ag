SEM List_Tree [ | | pres : Presentation_Doc_Node_Clip_Token ]
  | List_Tree lhs.pres = loc (Node_List_Tree @self @lhs.path) $ presentFocus @lhs.focusD @lhs.path $ @pres
                          
  | ParseErrList_Tree
      lhs.pres = loc (Node_ParseErrList_Tree @self @lhs.path) $ presentFocus @lhs.focusD @lhs.path $ structural $
                   presParseErr (Node_ParseErrList_Tree @self @lhs.path) @error
  | HoleList_Tree
      lhs.pres = loc (Node_HoleList_Tree @self @lhs.path) $ presentFocus @lhs.focusD @lhs.path $ structural $
                   presHole @lhs.focusD "Tree" (Node_HoleList_Tree @self @lhs.path) @lhs.path
